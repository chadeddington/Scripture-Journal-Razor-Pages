@page
@model MyScriptureJournal.Pages.Entries.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="JournalEntry.DateCreated" class="control-label"></label>
                <input id="dateCreated" asp-for="JournalEntry.DateCreated" class="form-control" value=@DateTime.Now.ToString("yyyy-MM-dd")/>
                <span asp-validation-for="JournalEntry.DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Book" class="control-label"></label>
                <input asp-for="JournalEntry.Book" class="form-control" />
                <span asp-validation-for="JournalEntry.Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Chapter" class="control-label"></label>
                <input asp-for="JournalEntry.Chapter" class="form-control" />
                <span asp-validation-for="JournalEntry.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Verse" class="control-label"></label>
                <input asp-for="JournalEntry.Verse" class="form-control" />
                <span asp-validation-for="JournalEntry.Verse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JournalEntry.Note" class="control-label"></label>
                <textarea asp-for="JournalEntry.Note" rows="5" class="form-control" ></textarea>
                <span asp-validation-for="JournalEntry.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
